{
    "compilerOptions": {
      "module": "commonjs",
      "noImplicitReturns": true,
      "noUnusedLocals": false,
      "outDir": "lib",
      "sourceMap": true,
      "strict": true,
      "target": "es2017",
        "typeRoots": [ "node_modules/@types" ],
        "esModuleInterop": true
    },
    "compileOnSave": true,
    "include": [
      "src"
    ],
    "exclude": [
        "**/*.spec.ts",
        "node_modules"
    ],
}
